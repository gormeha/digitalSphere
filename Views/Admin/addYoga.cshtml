@model DigitalSphere.Models.Yoga
@{
    ViewBag.Title = "addYoga";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm("addYoga", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{ 
    
    <div class="col-md-3"></div>
    
    <div class="col-md-5" style="margin-top: 100px; margin-left: 80px">
    <form class="form">
        <input type="file" name="f"  class="form-control"/><br />
        <div class="form-group">
            @Html.TextBoxFor(m => m.Disease_Name, new { @class = "form-control", @placeholder = "Disease Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Yoga_Name, new { @class = "form-control", @placeholder = "Yoga Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Yoga_Info, new { @class = "form-control", @placeholder = "Info" })
        </div>
        <input type="submit" class="btn btn-primary form-control" value="Add"/>
    </form>
        </div>
}
