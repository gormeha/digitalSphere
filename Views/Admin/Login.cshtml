@model DigitalSphere.Models.Admin
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
            <div class="container">
                <h4 class="text-center" style="color:red">@TempData["login"]</h4>
                <h2 class="text-center">Welcome To Login</h2>

                <hr />

                <div class="row">
                    <div class="col-md-4"></div>

                    <div class="col-md-4">
                        
                      
                        @using (Html.BeginForm("Login","Admin"))
                        {
                            
                        <form role="form">
                            <div class="form-group">
                                <h2>@ViewBag.msg</h2>

                                <!--<input type="text" class="form-control" placeholder="Enter Your Username" id="name"/>-->
                                @Html.TextBoxFor(m => m.Job_Id, new { @class = "form-control", @placeholder = "Enter Your Username", @id = "m.Job_Id" })
                            </div>


                            <div class="form-group">

<!--                                <input type="password" class="form-control" placeholder="Enter Your Password" id="password"/>-->
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter Your Password", @id = "m.Password" })
                            </div>


                            <hr />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                         </form>
                        }

                    </div>


                    <div class="col-md-4"></div>

                </div>
            </div>
        </body>
    </html>