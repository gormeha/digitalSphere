                 </li>
                  
                  <li >@Html.ActionLink(" Notification", "Notification", "Admin", null, new { @class = "list-group-item fa fa-bell", @style = "font-size:large" })</li>
              
                  
                  
                  <li >@Html.ActionLink(" Feedback", "Feedback", "Admin", null, new { @class = "list-group-item fa fa-comment ", @style = "font-size:large" })</li>
                                  
              </ul>

               
        </div>

         <!--End Left navbar-->
                </div>
         
  
    
    <!-- content  -->

        <div  id="main-content">
            <div>@RenderBody()</div>
        </div>
    

<script>

    $('#employee').tooltip({ title: "Employee", trigger: "hover", placement:"right"});
    $('#sport').tooltip({ title: "Sports", trigger: "hover", placement: "right" });
    $('#multiplex').tooltip({ title: "Multiplex", trigger: "hover", placement: "right" });
    $('#library').tooltip({ title: "Library", trigger: "hover", placement: "right" });
    $('#feedback').tooltip({ title: "Feedbacks", trigger: "hover", placement: "right" });
    $('#fitness').tooltip({ title: "Fitness", trigger: "hover", placement: "right" });
    $('#notification').tooltip({ title: "Notification", trigger: "hover", placement: "right" });
    $('#hall').tooltip({ title: "Hall", trigger: "hover", placement: "right" });
    $('#gallery').tooltip({ title: "Gallery", trigger: "hover", placement: "right" });
    $('#indoor').tooltip({ title: "Indoor", trigger: "hover", placement: "right" });
    $('#outdoor').tooltip({ title: "Outdoor", trigger: "hover", placement: "right" });



    function openNav() {
       
        if (document.getElementById("left-navbar").style.width == "0px") {
           
            document.getElementById("left-navbar-icon").style.width="0px";
            document.getElementById("left-navbar").style.width = "250px";
          
            document.getElementById("main-content").style.marginLeft = "260px";
        }
        else {
          document.getElementById("left-navbar-icon").style.width = "50px";
            document.getElementById("left-navbar").style.width = "0px";
            document.getElementById("main-content").style.marginLeft = "0px";
      
        }
       
    }

    function showProfile() {
        if (document.getElementById("profiles").style.width == "0px") {
            document.getElementById("profiles").style.width = "250px";
            document.getElementById("glyphi").className = "glyphicon glyphicon-chevron-up";

        }
        else {
            document.getElementById("profiles").style.width = "0px";
            document.getElementById("glyphi").className = "glyphicon glyphicon-chevron-down";
        }

    }
</script>

</body>
</html>

