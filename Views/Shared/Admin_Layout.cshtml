                       <li>@Html.ActionLink(" ", "outdoor", "Sports",null, new {@id="outdoor",@class="list-group-item fa fa-soccer-ball-o sportcategory",@style="color:white; background-color:#428bca" })</li>
                       
                    </ul>
                 </li>
                 <li>@Html.ActionLink(" ", "Index", "Multiplex", null, new {@id="multiplex", @class = "glyphicon glyphicon-facetime-video list-group-item", @style = "font-size:large" })</li>
                 <li>@Html.ActionLink(" ", "Index", "Library", null, new {@id="library", @class = "fa fa-book list-group-item", @style = "font-size:large" })</li>
                 <li>@Html.ActionLink(" ", "Index", "Hall", null, new { @id="hall",@class = "list-group-item fa fa-institution", @style = "font-size:medium" })</li>
                 <li>@Html.ActionLink(" ", "Index", "Gallery", null, new {@id="gallery", @class = "glyphicon glyphicon-picture list-group-item", @style = "font-size:large" })</li>
      

