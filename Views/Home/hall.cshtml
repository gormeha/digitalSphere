<script>

    $(document).ready(function () {
        $("#category").addClass("activetab");
        $("#hall").addClass("activetab");

        $("#to").change(function () {
            var to =new  Date($(this).val());
            var from =new Date( $("#from").val());

            $.getJSON("../Home/Checkdate", { from: from , to:to}, function (available) {
                alert(available);
            });

            var q = Date.parse(to) >= Date.parse(from);
            
            if (!q) {
                alert("Invalid duration");
            }
            else {
                var a = (to- from)/(1000*60*60*24)+1;
                
                $("#days").val(a);
                $("#rate").val(1000 * a);
            }
        });
        
        @if (TempData["Booked"] == "book")
        { 
            @:$('#modal').modal('show');
        }
        @if (TempData["Available"] == "Date not available")
        { 
            @:alert("Dates not available");
        }
    });
</script>