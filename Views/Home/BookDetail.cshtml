@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/User_Layout.cshtml";
    var name = "";
}
<body background="~/images/back2.jpg">

    <div class="container" style="margin-top: 100px">
        <div class="row">
            @foreach (var i in ViewData["book"] as IEnumerable<DigitalSphere.Models.Book>)
            {
                name = i.Title;

                <div class="col-md-4" style="padding-right: 50px">
                    @{    
                    var imgstring = Convert.ToBase64String(i.book_pic);
                    var pic = String.Format("data:image/gif;base64,{0}", imgstring);
                
                    }
                    <img src="@pic" alt="book" width="300" height="500" style="box-shadow: 0 10px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);">
                </div>

                <div class="col-md-8" style="margin-top: 50px">
                    <table class="table table-hover table-bordered table-responsive table-striped" style="text-align: center; box-shadow: 0 10px 15px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);">
                        <thead style="background-color: gray; color: white">
                            <tr>
                                <td colspan="2"><b>
                                    <h4>Book Details</h4>
                                </b></td>

                            </tr>
                        </thead>
                        <tbody style="background-color: silver; font-size: large">
                            <tr>
                                <td><b>Book</b></td>

                                <td style="color: #0099FF;"><b>@i.Title</b></td>
                            </tr>
                            <tr>
                                <td><b>Author</b></td>

                                <td>@i.Author</td>
                            </tr>
                            <tr>
                                <td><b>Publisher</b></td>

                                <td>@i.Pubication</td>

                            </tr>
                            <tr>
                                <td><b>Category</td>

                                <td>@i.Category

                                </td>
                            </tr>
                            <tr>
                                <td><b>Language</b></td>

                                <td>@i.Language</td>
                            </tr>
                            <tr>
                                <td><b>ISBN</b></td>

                                <td>@i.ISBN</td>
                            </tr>
                            <tr>
                                <td><b>Price</b></td>

                                <td>@i.Price</td>
                            </tr>

                        </tbody>
                    </table>
                    <center>

<!--                        <input type="submit" id="issue" class="btn btn-info btn-lg" value="Issue" />-->
                      <a href="#modal3" class="btn btn-info btn-lg" data-dismiss="modal" data-target="#modal3" data-toggle="modal">Issue</a>
                  </center>

                </div>
        
             
                <div class="modal fade" id="modal3" role="dialog" style="padding-top: 200px">
                    <div class="modal-dialog" style="height: 20%; width: 40%">
                        <div class="modal-content">
                            <div class="modal-body" style="padding: 40px 50px; text-align: center">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>

                                <h5 style="text-align: left">Enter your Email_id </h5>
                                <br />

                                @using (Html.BeginForm("IssueBook/" + @name, "Home"))
                                {
                                    <form role="form" class="form">
                                        <div class="form-group">

                                            <input type="text" name="emailid" class="form-control" placeholder="Enter email id" />

                                        </div>

                                        <input type="submit" class="btn btn btn-block" style="background-color: #00bcd4;" />
                                    </form>
                                }
                            </div>

                        </div>
                    </div>
                </div>

            }
        </div>
    </div>




    <div class="modal fade" id="modalissue" role="dialog" style="padding-top: 200px">
        <div class="modal-dialog" style="height: 20%; width: 40%">
            <div class="modal-content">

                <div class="modal-body" style="padding: 40px 50px; text-align: center">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <form role="form" style="font-size: small">
                        <div class="form-group">
                            <label>
                                Thank You for Issuing Book!!<br />
                                Book will be delivered at your doorstep within 2 days.<br />
                                Booking summery sent to your Email Id.
                            </label>
                        </div>

                        <button class="btn btn btn-block" style="background-color: #00bcd4;" data-dismiss="modal">OK</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

</body>
<script>
    $(document).ready(function () {
        $("#category").addClass("activetab");
        $("#library").addClass("activetab");

    });
</script>

