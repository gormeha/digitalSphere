@{
    ViewBag.Title = "Album";
    Layout = "~/Views/Shared/User_Layout.cshtml";
    var i = 0;
    }

<body background="~/images/back2.jpg">

<div id="gallery" >
    <table>
        <tr>
@foreach(var item in ViewData["Album"] as IEnumerable<DigitalSphere.Models.Album>)
{
    i = i + 1;
        <td class="col-md-3" style="padding-top: 100px; padding-left:50px">
            <div class="thumbnail" style="width:400px">
                <a href="../Home/Gallery/@item.AlbumName">
                    @{
                        var imgstring=Convert.ToBase64String(@item.AlbumImg);
                        var pic=String.Format("data:image/gif;base64,{0}",imgstring);
                    <img src="@pic" alt="@item.AlbumName" style="width: 100%; height:300px">
                    }
                    <div class="caption" style="background-color: #00bcd4; color: #ffffff">
                        <center><h4>@item.AlbumName</h4></center>
                    </div>
                </a>
            </div>
        </td>
    if (i >= 4)
    { 
        @:</tr>     
        @:<tr>
            i = 0;
    }
}
            </tr>
    </table>
</div>
</body>    <script>
        $(document).ready(function () {

            $("#gallery").addClass("activetab");

        });

    </script>
