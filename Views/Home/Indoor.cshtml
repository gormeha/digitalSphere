@{
    ViewBag.Title = "Indoor";
    Layout = "~/Views/Shared/User_Layout.cshtml";
    var j = 0;
}
<body background="~/images/back2.jpg">
<div id="#indoor">
    <div class="container" style="margin-top: 100px; ">

        <table>
            <tbody>
                <tr >
                @foreach (var i in ViewData["indoor"] as IEnumerable<DigitalSphere.Models.Sport>)
                {
                    j = j + 1;
                    <td class="col-md-1" style=" width: 100px"></td>
                    <td class="col-md-4" style="padding-bottom:40px">
                        <div class="thumbnail">
                            <a href="../Home/Sport/@i.Sport_Name">
                                @{
                    var imgstring = Convert.ToBase64String(@i.Picture);
                    var pic = String.Format("data:idata:image/gif;base64,{0}", imgstring);
                             
                                }
                                <img src="@pic" alt="chess" style="width: 400px; height:250px">
                            </a>
                        </div>
                    </td>
                    <td class="col-md-1" ></td>
                    if (j > 1)
                    { 
                        j=0;
                        @:</tr>
                        @:<tr>
                    }
                }
                    </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {

        $("#category").addClass("activetab");
        $("#sport").addClass("activetab");
        $("#indoor").addClass("activetab");
        
    });

</script>
    </body>