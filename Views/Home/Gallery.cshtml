@{
    ViewBag.Title = "Album";
    Layout = "~/Views/Shared/User_Layout.cshtml";
    var i = 0;
    }

<body background="~/images/back2.jpg">

<div id="gallery" >
    <table>
        <tr>
@foreach (var item in ViewData["Gallery"] as IEnumerable<DigitalSphere.Models.Gallery>)
{
    i = i + 1;
        <td class="col-md-3" style="padding-top: 100px; padding-left:50px">
            <div class="thumbnail" style="width:300px">
                 @{
                        var imgstring=Convert.ToBase64String(@item.image);
                        var pic=String.Format("data:image/gif;base64,{0}",imgstring);
                  }
                <a href="@pic">
                <img src="@pic" alt="@item.albumName" style="width: 100%; height:300px">    
                </a>
            </div>
        </td>
    if (i >= 4)
    { 
        @:</tr>     
        @:<tr>
            i = 0;
    }
}
            </tr>
    </table>
</div>
</body>    
<script type="text/javascript">
               $(document).ready(function () {

                   $("#gallery").addClass("activetab");

               });

    </script>

