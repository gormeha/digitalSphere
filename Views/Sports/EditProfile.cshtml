@model DigitalSphere.Models.Employee
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/SportAdmin_Layout.cshtml";
}

<h2>EditProfile</h2>
@foreach (var i in ViewData["Employee"] as IEnumerable<DigitalSphere.Models.Employee>)
{
    <div class="container">
        @using (Html.BeginForm("EditProfile", "Sports", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-4"></div>
                <div class="text-center col-md-4">
                    <div class="img-circle" style="height: 300px; width: 300px">
                        @{
            var imgString = Convert.ToBase64String(i.Pro_pic);
            var pic = String.Format("data:image/gif;base64,{0}", imgString);
                        }

                        <img src="@pic" class="img-circle" id="EmpImg" style="height:300px; width:300px;  margin-left:30px;"/><br />

                        <br />
                    </div>
                </div>
                <div class="col-md-5"></div>
            </div>



            <br />
            <br />
            <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <form class="form" role="form">
                    <div class="form-group">
                        <h4>Name</h4>
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(m => m.EmpName, new { @class = "form-control", @placeholder = i.EmpName, @Value = i.EmpName })
                    </div>
                    <div class="form-group">
                        <h4>Date Of Birth</h4>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = i.DOB.ToShortDateString(), @Value = i.DOB.ToShortDateString()})
                    </div>

                    <div class="form-group">
                        <h4>Quaification</h4>
                    </div>


                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Qualification, new { @class = "form-control", @placeholder = i.Qualification, @Value = i.Qualification })
                    </div>
                    
                    <div class="form-group">
                        <h4>Address</h4>
                    </div>


                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = i.Address, @Value = i.Address })
                    </div>
                    <div class="form-group">
                        <h4>Contact</h4>
                    </div>


                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @placeholder = i.Contact, @Value = i.Contact })
                    </div>
                    <div class="form-group">
                        <h4>Email</h4>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = i.Email, @Value = i.Email })
                    </div>

                    <div>
                       
                        @Html.HiddenFor(m => m.Job_Id, new { @Value=i.Job_Id})
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary btn-block">Done</button>
                    </div>

                </form>



            </div>
                </div>
    
        }
    </div>
    
}
