@model DigitalSphere.Models.Movie
@{
    ViewBag.Title = "AddPic";
    Layout = "~/Views/Shared/Multiplex_Layout.cshtml";
}

<h2>AddPic</h2>
<div class="col-md-3"></div>
<div class="col-md-6" style="margin-top:50px">
@using(Html.BeginForm("Add", "Multiplex", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
       <form>
    
   
    <div class="form-group">
        @Html.TextBoxFor(m => m.Movie_Id, new { @class="form-control", @placeholder="Movie Id"})
    </div>
    
    <div class="form-group">
        @Html.TextBoxFor(m => m.MovieName, new { @class = "form-control", @placeholder = "Movie Name" })
    </div>
    
    
    <div class="form-group">
        @Html.TextBoxFor(m=>m.MovieDuration,new { @class = "form-control", @placeholder = "Duration" })

    </div>
    
    
    <div class="form-group">
        @Html.TextBoxFor(m=>m.Price,new { @class = "form-control", @placeholder = "Price" })
    </div>   
   
    <div class="form-group">
        <input type="file" name="f1" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="file" name="f2" class="form-control"/>
    </div>

     <div class="form-group">
        @Html.TextBoxFor(m=>m.Language,new { @class = "form-control", @placeholder = "Language" })
    </div> 
            <div class="form-group">
        @Html.TextBoxFor(m=>m.Release_Date,new { @class = "form-control", @placeholder = "Release Date" })
    </div> 
           
            <div class="form-group">
        @Html.TextBoxFor(m=>m.Producer,new { @class = "form-control", @placeholder = "Producer" })
    </div>  
            <div class="form-group">
        @Html.TextBoxFor(m=>m.Writer,new { @class = "form-control", @placeholder = "Writer" })
    </div>  
     <div class="form-group">
        @Html.TextBoxFor(m=>m.Censor,new { @class = "form-control", @placeholder = "Censor" })
    </div>  
            <div class="form-group">
        @Html.TextBoxFor(m=>m.Genre,new { @class = "form-control", @placeholder = "Genre" })
    </div>  
    <div class="form-group">
                @Html.TextBoxFor(m=>m.Starcast,new { @class = "form-control", @placeholder = "Starcast" })
    </div>
    
    
    
    <div class="form-group">
                @Html.TextBoxFor(m=>m.Director,new { @class = "form-control", @placeholder = "Director" })
    </div>
        <div>
            <button type="submit" class="btn btn-primary btn-block">Add Movie</button>
    </div>

           </form>

}
    </div>
