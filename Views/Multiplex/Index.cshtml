@model IEnumerable<DigitalSphere.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Multiplex</h2>
<div class="container" style="margin-bottom: 70px">
    <div class="jumbotron" style="background-color: #ccc; height: 100px; margin-top: 50px">
        @foreach (var item in ViewData["Multiplex"] as IEnumerable<DigitalSphere.Models.Employee>)
        {
          
        <div class="col-md-4 text-center" style="margin-left: 40px">

@{    
               var imgstring=Convert.ToBase64String(item.Pro_pic);
               var pic=String.Format("data:image/gif;base64,{0}",imgstring);
                   
            <img src="@pic"  alt="@item.EmpName"  class="img-circle sport-pic" style="height:200px; width:200px"/>
           }

        </div>
        <div style="font-size: large; font-weight: 100; font-family:'Times New Roman'">
           <br />
            <span style="font-size: x-large; font-weight: bold">@item.EmpName<br />
            </span><br />
                @item.Role<br />
                @item.Qualification<br />
                @item.Email<br />
                @item.Contact
         

        </div>
        }
    </div>
</div>
@{
    var i = 1;
}

<div class="container" style="margin-top:50px">
    <div class="">
<table style="margin-left:20px; margin-top:10px;" class="table">
<tbody>    
    <tr>
@foreach (var item in Model)
{

    i = i + 1;
 
     <td class="col-md-4">
     <div style="width:300px " class="text-center">
       <div class="movie-back">
@{    
               var imgstring=Convert.ToBase64String(item.Movie_Pic);
               var pic=String.Format("data:image/gif;base64,{0}",imgstring);
                   
            <img src="@pic"  alt="@item.MovieName" class="img-thumbnail movie-pic" height="300" width="300"/>
           }

        <span class="movie-text">
            @Html.ActionLink(" ", "MovieDetail", new { id = @item.Movie_Id }, new { @class = "glyphicon glyphicon-info-sign" })
           

        </span> 
        </div>
       
    </div>
    </td> 


    if (@i > 3)
    { 
        @:</tr>
        @:<tr>
            i = 1;
    }


}
        </tr>
    </tbody>
    </table>
        </div>
    </div>